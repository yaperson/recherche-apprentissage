<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block head %}
    <link rel="stylesheet" href="../../style/style.css">
    <link rel="stylesheet" href="../../style/table.css">
    {% endblock %}
    <title>Liste des opportunités</title>
</head>
<body>
    {% if error != '' %}
        <div class="error">{{error}}</div>    
    {% endif %}
    <header>
        <nav class="topnav" id="topnav">
            <a class="topnav__link" href="../../index.html">Home  {{ user._role }}</a>
            
            {% for user in user  %}
                {% if user._role == "admin" %}
                <a class="topnav__link" href="../user/userList.php">Gestion utilisateur</a>
                <a class="topnav__link" href="../admin/readLogs.php">Télécharcher les logs</a>
                {% endif %}
            {% endfor %}
            <a class="topnav__link" href="exportCsv.php">format .csv</a>
            <a class="topnav__link" href="addApprentissage.php">Ajouter a la liste</a>
            <a class="topnav__link" id="right" href="../user/logout.php">| Logout</a>
        </nav>
    </header>
    <main>
    <table class='table'>
      <tr class="table_title"> 
        <th> Entreprise </th> 
        <th> Contact </th> 
        <th> Lieux </th> 
        <th> Poste </th> 
        <th> télétravail </th> 
        <th> Etat de la candidature </th>
        <th colspan="3" class="action_th"> action </th> 
      </tr>

            {% for apprentissage in apprentissages %}
                <tr>
                    <th class="data">{{ apprentissage._entreprise }}</th>
                    <th class="data">{{ apprentissage._contact }}</th>
                    <th class="data">{{ apprentissage._lieux }}</th>
                    <th class="data">{{ apprentissage._poste }}</th>
                    <th class="data">{{ apprentissage._teletravail }}</th>
                    <th class="data">{{ apprentissage._candidature }}</th>
                    <th class="data">
                        {% for user in user  %}
                            {% if user._role == "admin" %}
                                <form method="POST" action="deleteApprentissage.php">
                                    <input type="hidden" name="id" value="{{apprentissage._id}}">
                                    <button class="action_btn" type="submit">supprimer</button>
                                </form>
                            {% endif %}
                        {% endfor %}
                    </th>
                </tr>
            {% endfor %}
            </tr>
    </table>
    </main>
</body>
</html>